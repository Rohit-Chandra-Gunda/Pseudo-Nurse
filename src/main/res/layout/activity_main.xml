<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#dcfb5e"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="5"
    android:orientation="horizontal"
    tools:context="ado.fun.code.pseudonurse.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:weightSum="7"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginStart="18dp">
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/doctor"
        android:id="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp" />

    <TextView
        android:text="Hello!\nHow do you feel?"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView3" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:weightSum="7"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginStart="18dp">

    <Button
        android:text="Know your disease"
        android:paddingTop="10dp"
        android:gravity="left"
        android:textSize="10sp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/know"
        android:background="#58dca3"
        android:textColor="#000000"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"/>

        <Button
            android:text="To-Do list"
            android:paddingTop="10dp"
            android:gravity="left"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/todo"
            android:background="#58dca3"
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"/>

        <Button
        android:text="Message Doctor"
            android:paddingTop="10dp"
            android:gravity="left"
            android:textSize="12sp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#58dca3"
        android:textColor="#000000"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/messagedoctor"
        android:layout_weight="1"
            android:layout_marginBottom="10dp"/>

    <Button
        android:text="Manange numbers"
        android:paddingTop="10dp"
        android:gravity="left"
        android:textSize="12sp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/manage"
        android:background="#58dca3"
        android:textColor="#000000"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"/>

    <Button
        android:text="Call Doctor"
        android:paddingTop="10dp"
        android:gravity="left"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/callhospital"
        android:background="#58dca3"
        android:textColor="#000000"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"/>


    <Button
        android:text="Diet for good health"
        android:paddingTop="10dp"
        android:gravity="left"
        android:textSize="12sp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/diet"
        android:background="#58dca3"
        android:textColor="#000000"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"/>
        <Button
            android:text="Emergency Button"
            android:paddingTop="12dp"
            android:gravity="left"
            android:textSize="10sp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/emergency"
            android:background="#58dca3"
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
</LinearLayout>
